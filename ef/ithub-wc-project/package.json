{
  "name": "learn-wc-library",
  "private": false,
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/daslef/learn-wc-projects"
  },
  "main": "./dist/learn-wc-library.umd.js",
  "module": "./dist/learn-wc-library.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/learn-wc-library.es.js",
      "require": "./dist/learn-wc-library.umd.js"
    },
    "./styles.css": "./dist/learn-wc-library.css"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "storybook build",
    "build:lib": "tsc && vite build",
    "build:storybook": "storybook build",
    "lint": "npx @biomejs/biome lint --write ./src",
    "format": "npx @biomejs/biome check --write --organize-imports-enabled=true ./src",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "test:storybook": "test-storybook",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "prepack": "json -f package.json -I -e \"delete this.devDependencies; delete this.dependencies\""
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@playwright/test": "^1.54.2",
    "@storybook/addon-a11y": "^9.1.2",
    "@storybook/addon-docs": "^9.1.2",
    "@storybook/addon-vitest": "^9.1.2",
    "@storybook/web-components-vite": "^9.1.2",
    "@types/node": "^24.2.1",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "lit": "^3.3.1",
    "playwright": "^1.54.2",
    "storybook": "^9.1.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": [
      "biome check --files-ignore-unknown=true",
      "biome check --write --no-errors-on-unmatched",
      "biome lint --write --no-errors-on-unmatched --files-ignore-unknown=true",
      "biome format --write --no-errors-on-unmatched"
    ]
  },
  "dependencies": {
    "@storybook/test-runner": "^0.23.0"
  }
}
